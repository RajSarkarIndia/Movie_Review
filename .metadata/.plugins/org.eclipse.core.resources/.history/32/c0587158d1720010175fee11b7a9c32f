package DAO;

import java.util.List;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

@Repository
public class SelectMovie {

    @Autowired
    private JdbcTemplate jdbcTemplate;

    // SQL query to fetch movies matching the provided name
    private final String query = "SELECT * FROM Movie WHERE MovieName = ?";

    public List<Movie> findMovie(String movieName) {
        // Pass the movieName as a parameter to the query and use the custom MovieRowMapper
        return jdbcTemplate.query(query, new Object[]{movieName}, new MovieRowMapper());
    }
}
