package DAO;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

@Repository
public class MovieRepository {

	@Autowired
	private JdbcTemplate jdbcTemplate;
	 @Autowired
	    private MovieRowMapper movieRowMapper;

	private final String query1 = "SELECT * FROM Movie order by ReleaseDate DESC";

	public List<Movie> findAllMovies() {
		return jdbcTemplate.query(query1, movieRowMapper);
	}

	String query2 = "select * from Movie where MovieName=?";

	public List<Movie> findMovie(String movie) {
		return jdbcTemplate.query(query2, movieRowMapper, movie);

	}

	String query3 = "select * from Movie order by MovieRating desc ";

	public List<Movie> findTopMovies() {
		return jdbcTemplate.query(query3, movieRowMapper);
	}

	public Double CountRating(String movie) {
		String sql = "SELECT AVG(UserRating) FROM Review where MovieName=?";
		Double rating = jdbcTemplate.queryForObject(sql, Double.class,movie);
		if (rating == null) {
			return 0.0;
		} else {
			return rating;

		}

	}

}
