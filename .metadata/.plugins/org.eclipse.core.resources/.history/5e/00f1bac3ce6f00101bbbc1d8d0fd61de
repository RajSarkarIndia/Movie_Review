package configaration;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.ComponentScan;
import org.springframework.context.annotation.Configuration;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.jdbc.datasource.DriverManagerDataSource;
import org.springframework.web.servlet.config.annotation.EnableWebMvc;
import org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping;
import org.springframework.web.servlet.view.InternalResourceViewResolver;

@Configuration
@EnableWebMvc
@ComponentScan("configaration")
public class JBspringConfigFile {

	@Bean
	public DriverManagerDataSource DMDS() {

		DriverManagerDataSource dmds = new DriverManagerDataSource();
		dmds.setDriverClassName("com.mysql.cj.jdbc.Driver");
		dmds.setUrl("jdbc:mysql://localhost:3306/movieReview");
		dmds.setUsername("root");
		dmds.setPassword("Raj@1234");
		return dmds;
	}

	@Bean
	public JdbcTemplate jdbct() {
		return new JdbcTemplate(DMDS());
	}

}
