<h3 style="text-align:center;">New Movies</h3>

<div class="movie-container">
<%
    List movies = (List) session.getAttribute("movies");
    if (movies != null && !movies.isEmpty()) {
        for (int i = 0; i < Math.min(6, movies.size()); i++) {
            request.setAttribute("movie", movies.get(i));
%>
    <div class="movie-item">
      <a href="#">
        <img src="${pageContext.request.contextPath}/image/${movie.movieImageURL}" alt="${movie.movieName}" />
        
        <h4>${movie.movieName}</h4>

        <%-- Star rating based on 10-point scale --%>
        <%
          double rating10 = (double) ((Number)movie.getClass().getMethod("getMovieRating").invoke(movie)).doubleValue();
          double rating5 = rating10 / 2.0;
          int fullStars = (int) rating5;
          double fraction = rating5 - fullStars;
          boolean halfStar = fraction >= 0.25 && fraction < 0.75;
          int emptyStars = 5 - fullStars - (halfStar ? 1 : 0);
        %>
        <div class="stars">
          <% for (int star=0; star < fullStars; star++) { %>
            &#9733; <%-- filled star --%>
          <% } %>
          <% if (halfStar) { %>
            <span class="half-star">&#9733;</span> <%-- half star --%>
          <% } %>
          <% for (int star=0; star < emptyStars; star++) { %>
            &#9734; <%-- empty star --%>
          <% } %>
        </div>
        <div>
          Rating: <%= String.format("%.1f", rating10) %> / 10
        </div>
        <h4>Released: ${movie.releaseDate}</h4>
      </a>
    </div>
<%
        }
    } else {
%>
    <p style="text-align:center; color: #666;">No movies available.</p>
<%
    }
%>
</div>

<h3 style="text-align:center;">Top Movie</h3>
<div class="movie-container">
<%
    List topmovie = (List) session.getAttribute("Topmovies");
    if (topmovie != null && !topmovie.isEmpty()) {
        for (int i = 0; i < Math.min(6, topmovie.size()); i++) {
            // Use consistent attribute name 'movie' for EL
            request.setAttribute("movie", topmovie.get(i));
%>
<div class="movie-item">
  <a href="#">
    <img src="${pageContext.request.contextPath}/image/${movie.movieImageURL}" alt="${movie.movieName}" />
    <h4>${movie.movieName}</h4>
    <%-- Star rating based on 10-point scale for top movies --%>
    <%
      double rating10 = (double) ((Number)movie.getClass().getMethod("getMovieRating").invoke(movie)).doubleValue();
      double rating5 = rating10 / 2.0;
      int fullStars = (int) rating5;
      double fraction = rating5 - fullStars;
      boolean halfStar = fraction >= 0.25 && fraction < 0.75;
      int emptyStars = 5 - fullStars - (halfStar ? 1 : 0);
    %>
    <div class="stars">
      <% for (int star=0; star < fullStars; star++) { %>
        &#9733;
      <% } %>
      <% if (halfStar) { %>
        <span class="half-star">&#9733;</span>
      <% } %>
      <% for (int star=0; star < emptyStars; star++) { %>
        &#9734;
      <% } %>
    </div>
    <div>
      Rating: <%= String.format("%.1f", rating10) %> / 10
    </div>
  </a>
</div>
<%
        }
    } else {
%>
<p style="text-align:center; color: #666;">No top movies available.</p>
<%
    }
%>
</div>
